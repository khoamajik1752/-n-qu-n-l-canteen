<body>
    <link rel="stylesheet" href="css/itemDetailStyle.css">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 border p-3 main-section bg-white">
                {{#if item.ma_mon_an}}
                <div class="row m-0 product-detail" id="{{item.ma_mon_an}}">
                    <div class="col-lg-4 left-side-product-box pb-3">
                        <img src="{{item.img_url}}" class="p-3">
                    </div>
                    <div class="col-lg-8">
                        <div class="right-side-pro-detail border p-3 m-0">
                            <div class="m-0 pl-3 pt-0 pb-3 text-center h2">
                                CHI TIẾT SẢN PHẨM
                            </div>
                            <div class="row">
                                <div class="col-lg-12 item-title">
                                    <p class="m-0 p-0 bold-text name-product">{{item.ten_mon_an}}</p>
                                    <p class="m-0 p-0 price-pro">{{ConvertToVND item.gia_ban}}</p>
                                </div>

                                <div class="col-lg-12 pt-2">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <p class="m-0 p-0 bold-text">Còn lại: </p>
                                        </div>
                                        <div class="col-lg-3">
                                            <p class="m-0 quantity-pro"> {{item.so_luong}} </p>
                                        </div>
                                    </div>
                                    <hr class="m-0 pt-2 mt-2">
                                </div>
                                <div class="col-lg-12 amount-field">
                                    <p class="bold-text">Số lượng: </p>
                                    <div class="col-lg-6">
                                        <input type="number" id="quantity" class="form-control text-center w-100" value="1">
                                    </div>
                                </div>
                                <div class="col-lg-12 mt-3">
                                    <div class="row">
                                        <div class="col-lg-6 pb-2">
                                            <a  class="btn w-100" id="add-to-cart" style="background-color: #DAE5FC;">Thêm vào
                                                giỏ hàng</a>
                                        </div>
                                        <div class="col-lg-6">
                                            <a id="payment-now" class="btn w-100" style="background-color: #40ea92;">Thanh toán
                                                ngay</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{else}}
                <div class="row m-0 product-detail" id="{{item.ma_mat_hang}}">
                    <div class="col-lg-4 left-side-product-box pb-3">
                        <img src="{{item.img_url}}" class="p-3">
                    </div>
                    <div class="col-lg-8">
                        <div class="right-side-pro-detail border p-3 m-0">
                            <div class="m-0 pl-3 pt-0 pb-3 text-center h2">
                                CHI TIẾT SẢN PHẨM
                            </div>
                            <div class="row">
                                <div class="col-lg-12 item-title">
                                    <p class="m-0 p-0 bold-text name-product">{{item.ten_mat_hang}}</p>
                                    <p class="m-0 p-0 price-pro">{{ConvertToVND item.gia_ban_ra}}</p>
                                </div>
                                <div class="col-lg-12 pt-2">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <p class="m-0 p-0 bold-text">Còn lại: </p>
                                        </div>
                                        <div class="col-lg-3">
                                            <p class="m-0 quantity-pro"> {{item.so_luong}} </p>
                                        </div>
                                    </div>
                                    <hr class="m-0 pt-2 mt-2">
                                </div>
                                <div class="col-lg-12 amount-field">
                                    <p class="bold-text">Số lượng: </p>
                                    <div class="col-lg-6">
                                        <input type="number" id="quantity" class="form-control text-center w-100" value="1">
                                    </div>
                                </div>
                                <div class="col-lg-12 mt-3">
                                    <div class="row">
                                        <div class="col-lg-6 pb-2">
                                            <a class="btn w-100" id="add-to-cart" style="background-color: #DAE5FC;">Thêm vào
                                                giỏ hàng</a>
                                        </div>
                                        <div class="col-lg-6">
                                            <a id="payment-now" class="btn w-100" id="payment" style="background-color: #40ea92;">Thanh toán
                                                ngay</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>


    <div class="pop-up hidden">
        <div class="popup-container">
            <div class="notification">
                <div class="noti-header">
                    <i class="fas fa-window-close"></i>
                </div>
                <div class="noti-content-container">
                    <div class="noti-content">
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="script/itemDetailScript.js"></script>
    <script src="script/globalScript.js"></script>

</body>