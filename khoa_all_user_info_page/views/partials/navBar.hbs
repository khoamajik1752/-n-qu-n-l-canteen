<body>
    <link rel="stylesheet" href="css/navBarStyle.css">
    <div class="navbar-container">
        <nav class="navbar navbar-secondary navbar-color ">
            <div class="container-fluid ">
                <div class="meunu">
                    <div id="mySidenav" class="sidenav">
                        <div class="close-btn-container">
                            <i id="close-nav-btn" class="fas fa-bars" ></i>
                        </div>
                        <a href="/import-goods-history">Lịch sử nhập kho</a>
                        <a href="#">Services</a>
                        <a href="#">Clients</a>
                        <a href="#">Contact</a>
                    </div>
                    <button class="nav-menu">
                        <i id="menu-icon" class="fas fa-bars"></i>
                    </button>
                </div>

                <div class="container">
                    <div class="row">
                        <div class="col-2">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <div class="d-flex" style="flex-wrap: nowrap; align-items:center">
                                    <div class="nav-item" style="margin-right: 1em;">
                                        <a href="/">
                                            <img src="./images/restaurant.png" alt="" style="width: 40px; height: 40px">
                                        </a>
                                    </div>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/"><strong
                                                style="color: #475D8F; white-space: nowrap;">CĂN TIN HCMUS</strong></a>

                                    </li>
                                </div>
                            </ul>
                        </div>
                        <div class="col-1"></div>
                        <div class="col-6 text-center">
                            <div class="row height d-flex justify-content-center align-items-center">
                                <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-1">
                                    <div class="input-group">
                                        <input type="search"
                                            placeholder="Tìm kiếm thức ăn, nước uống, văn phòng phẩm,..."
                                            aria-describedby="button-addon1"
                                            class="rounded rounded-pill form-control border-0 bg-light">
                                        <div class="input-group-append">
                                            <button id="button-addon1" type="submit"
                                                class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-3 justify-content-center align-items-center">
                            <div class="d-flex align-items-end justify-content-end">

                                {{#ifCond (getJSONLen user) '>' 3}}
                                <div class="col-1 text-end">
                                    <div class="dropdown">
                                        <button id="user-avatar-btn" class="btn" type="button" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                            <img src="{{../user.img_url}}" id="user-avatar-img" alt="Avatar"
                                                style="width: 2rem; height: 2rem;" />
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-lg-end">
                                            <li><a href="/get-user-info"><button id="user-profile" class="dropdown-item"
                                                        type="button">Trang cá nhân</button></li></a>
                                            <li><button class="dropdown-item" type="button">Giỏ hàng</button></li>
                                            <li><button id="user-balance" class="dropdown-item" type="button"></button>
                                            </li>
                                            <li><button class="dropdown-item" type="button">Lịch sử mua hàng</button>
                                            </li>
                                            <li><button class="dropdown-item" type="button" id="sign-out-btn">Đăng xuất
                                                    <i class="fa fa-sign-out" style="margin-left: 0.5rem;"></i></button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                {{/ifCond}}
                                {{#ifCond (getJSONLen user) '==' 0}}
                                <button type="button" class="btn me-3 sign-up-btn">
                                    <i class="fa fa-user-plus" style="padding-right: 0.5rem;"></i>Sign up
                                </button>
                                <button type="button" class="btn me-3 sign-in-btn">
                                    <i class="fa fa-arrow-right" style="padding-right: 0.5rem;"></i>Sign in
                                </button>
                                {{/ifCond}}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </div>



    {{!-- This is pop up place --}}
    <script src="script/navbarScript.js"></script>
</body>

</html>